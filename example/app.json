{
  "expo": {
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff",
        "foregroundImage": "./assets/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "studio.antropia.thecomponentgarden"
    },
    "icon": "./assets/icon.png",
    "ios": {
      "bundleIdentifier": "studio.antropia.thecomponentgarden",
      "supportsTablet": true
    },
    "name": "The Component Garden",
    "newArchEnabled": true,
    "orientation": "portrait",
    "plugins": [
      [
        "react-native-audio-api",
        {
          "androidForegroundService": true,
          "androidFSTypes": [
            "mediaPlayback"
          ],
          "androidPermissions": [
            "android.permission.MODIFY_AUDIO_SETTINGS",
            "android.permission.FOREGROUND_SERVICE",
            "android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"
          ],
          "iosBackgroundMode": true,
          "iosMicrophonePermission": "This app requires access to the microphone to record audio."
        }
      ],
      "expo-audio"
    ],
    "slug": "thecomponentgarden",
    "splash": {
      "backgroundColor": "#ffffff",
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain"
    },
    "userInterfaceStyle": "light",
    "version": "1.0.0",
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
