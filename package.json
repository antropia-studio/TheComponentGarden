{
  "author": "Antropia <oss@antropia.studio> (https://antropia.studio/)",
  "bugs": {
    "url": "https://github.com/antropia.studio/TheComponentGarden/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.54.3"
  },
  "dependencies": {
    "tiny-invariant": "^1.3.3"
  },
  "description": "The Component Garden is where we play with fancy React Native components.",
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@commitlint/config-conventional": "^20.0.0",
    "@evilmartians/lefthook": "^1.13.6",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/react": "^19.2.0",
    "commitlint": "^20.1.0",
    "del-cli": "^7.0.0",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.5",
    "typescript": "^5.9.3"
  },
  "homepage": "https://github.com/antropia.studio/TheComponentGarden#readme",
  "keywords": [
    "react-native",
    "component",
    "component-library",
    "ui",
    "ios",
    "android"
  ],
  "license": "MIT",
  "name": "the-component-garden",
  "packageManager": "pnpm@10.18.2",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "private": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "react-native-builder-bob": {
    "output": "lib",
    "source": "src",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antropia.studio/TheComponentGarden.git"
  },
  "scripts": {
    "clean": "pnpm --filter='./lib' run clean && pnpm -r --filter='./packages/*' run clean",
    "example:android": "pnpm --filter='./example' run android",
    "example:ios": "pnpm --filter='./example' run ios",
    "example:prebuild": "pnpm --filter='./example' run prebuild",
    "example:start": "pnpm --filter='./example' run start",
    "lint": "biome check",
    "lint:fix": "biome check --write --unsafe",
    "lint:ts": "tsc --noEmit",
    "prepare": "pnpm --filter='./example' run prebuild && pnpm --filter='./lib' run prepare && pnpm -r --filter='./packages/*' run prepare",
    "test": "pnpm -r run test"
  },
  "version": "0.0.1"
}
