{
  "author": "Antropia <oss@antropia.studio> (https://antropia.studio/)",
  "bugs": {
    "url": "https://github.com/antropia.studio/TheComponentGarden/issues"
  },
  "dependencies": {
    "@antropia/the-component-garden-lib": "workspace:*"
  },
  "description": "A carousel component that brings some joy to your React Native apps.",
  "devDependencies": {
    "del-cli": "^7.0.0",
    "lucide-react-native": "^0.544.0",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-svg": "15.13.0",
    "twrnc": "^4.10.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./lib/module/index.js",
        "types": "./lib/typescript/module/packages/recording-wave/src/index.d.ts"
      },
      "require": {
        "default": "./lib/commonjs/index.js",
        "types": "./lib/typescript/commonjs/packages/recording-wave/src/index.d.ts"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "homepage": "https://github.com/antropia.studio/TheComponentGarden#readme",
  "keywords": [
    "react-native",
    "component",
    "component-library",
    "ui",
    "ios",
    "android"
  ],
  "license": "MIT",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "name": "@antropia/the-component-garden-recording-wave",
  "packageManager": "pnpm@10.16.1",
  "peerDependencies": {
    "lucide-react-native": "0.x.x",
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "2.x.x",
    "react-native-reanimated": "4.x.x",
    "react-native-svg": "15.x.x"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "react-native-builder-bob": {
    "output": "lib",
    "source": "src",
    "targets": [
      [
        "commonjs",
        {
          "configFile": true,
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "../../tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antropia.studio/TheComponentGarden.git"
  },
  "scripts": {
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "types": "./lib/typescript/commonjs/packages/recording-wave/src/index.d.ts",
  "version": "1.0.0"
}
